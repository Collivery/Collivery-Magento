<?xml version="1.0"?>
<config>
	<modules>
		<MDS_Shipping>
			<version>0.1.0</version>
		</MDS_Shipping>
	</modules>
	<global>
		<models>
			<mds_shipping>
				<class>MDS_Shipping_Model</class>
			</mds_shipping>
			<sales>
				<rewrite>
					<order>MDS_Shipping_Model_Sales_Order</order>
				</rewrite>
			</sales>
			<collivery_mysql4>
				<class>MDS_Shipping_Model_Mysql4</class>
				<entities>
					<collivery_quote>
						<table>mds_collivery_quote</table>
					</collivery_quote>
					<collivery_order>
						<table>mds_collivery_sale</table>
					</collivery_order>
				</entities>
			</collivery_mysql4>
		</models>
		<events>
			<sales_quote_save_before>
				<!-- Name of Event -->
				<observers>
					<save_before>
						<type>singleton</type>
						<class>MDS_Shipping_Model_Observer</class><!-- Over Model Class -->
						<method>saveQuoteBefore</method> <!-- name of function -->
					</save_before>
				</observers>
			</sales_quote_save_before>
			<sales_quote_save_after>
				<!-- Name of Event -->
				<observers>
					<save_after>
						<type>singleton</type>
						<class>MDS_Shipping_Model_Observer</class><!-- Over Model Class -->
						<method>saveQuoteAfter</method> <!-- name of function -->
					</save_after>
				</observers>
			</sales_quote_save_after>
			<sales_quote_load_after>
				<observers>
					<load_after>
						<type>singleton</type>
						<class>MDS_Shipping_Model_Observer</class><!-- Over Model Class -->
						<method>loadQuoteAfter</method> <!-- name of function -->
					</load_after>
				</observers>
			</sales_quote_load_after>
			<sales_model_service_quote_submit_after>
				<observers>
					<sales_model_service_quote_submit_after>
						<type>singleton</type>
						<class>MDS_Shipping_Model_Observer</class><!-- Over Model Class -->
						<method>saveOrderAfter</method> <!-- name of function -->
					</sales_model_service_quote_submit_after>
				</observers>
			</sales_model_service_quote_submit_after>
			<sales_order_load_after>
				<observers>
					<sales_order_load_after>
						<type>singleton</type>
						<class>MDS_Shipping_Model_Observer</class><!-- Over Model Class -->
						<method>loadOrderAfter</method> <!-- name of function -->
					</sales_order_load_after>
				</observers>
			</sales_order_load_after>
		</events>
		<resources>
			<collivery_setup>
				<setup>
					<module>MDS_Shipping</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</collivery_setup>
			<collivery_write>
				<connection>
					<use>core_write</use>
				</connection>
			</collivery_write>
			<collivery_read>
				<connection>
					<use>core_read</use>
				</connection>
			</collivery_read>
		</resources>
		<blocks>
			<collivery>
				<class>MDS_Shipping_Block</class>
			</collivery>
		</blocks>
		<helpers>
			<collivery>
				<class>MDS_Shipping_Helper</class>
			</collivery>
		</helpers>
	</global>
	<default>
		<carriers>
			<collivery>
				<active>1</active>
				<model>mds_shipping/carrier_collivery</model>
				<title>MDS Collivery</title>
				<lengthLabel>length</lengthLabel>
				<widthLabel>width</widthLabel>
				<heightLabel>height</heightLabel>
				<markup>10</markup>
				<specificerrmsg>This shipping method is currently unavailable. If you would like to ship using this shipping method, please contact us.</specificerrmsg>
				<sallowspecific>1</sallowspecific>
				<specificcountry>ZA</specificcountry>
			</collivery>
		</carriers>
	</default>
	<frontend>
		<routers>
			<collivery>
				<use>standard</use>
				<args>
					<module>MDS_Shipping</module>
					<frontName>collivery</frontName>
				</args>
			</collivery>
		</routers>
		<layout>
			<updates>
				<collivery>
					<file>collivery.xml</file>
				</collivery>
			</updates>
		</layout>
	</frontend>
	<admin>
		<routers>
			<collivery>
				<use>admin</use>
				<args>
					<module>MDS_Shipping</module>
					<frontName>collivery</frontName>
				</args>
			</collivery>
		</routers>
	</admin>
	<adminhtml>
		<layout>
			<updates>
				<collivery>
					<file>collivery.xml</file>
				</collivery>
			</updates>
		</layout>
	</adminhtml>
</config>
